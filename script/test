#!/bin/bash -exu

cd `dirname $0`/..

stack build --flag rfc:browser --stack-yaml=./stack.ghcjs.yaml --fast
stack build --flag rfc:-browser --fast

stack clean 
stack clean --stack-yaml=./stack.ghcjs.yaml 
stack build --flag rfc:browser --flag rfc:development --stack-yaml=./stack.ghcjs.yaml --fast

stack clean 
stack clean --stack-yaml=./stack.ghcjs.yaml 
stack build --flag rfc:development --flag rfc:-browser --fast
