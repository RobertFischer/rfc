#!/bin/bash -exu

cd `dirname $0`/..

stack exec -- hlint -j -c --cross ./src

stack build --stack-yaml=./stack.ghcjs.yaml --fast 
stack build --stack-yaml=./stack.ghcjs.yaml --haddock --haddock-deps --fast

stack build --fast 
stack build --haddock --haddock-deps --fast

stack exec -- weeder || true
stack exec --stack-yaml=./stack.ghcjs.yaml -- weeder || true
